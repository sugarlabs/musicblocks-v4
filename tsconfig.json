{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "downlevelIteration": true
  },
  "include": [
    "src",
    "tests"
  ],
  "extends": "./tsconfig.paths.json",
  /**
  * compilerOptions should be cjs for reading webpack config files
  * ts-node is used to read webpack config
  * hence overriding ts-node compilerOptions with module: "CommonJS"
  * https://webpack.js.org/configuration/configuration-languages/#typescript
  */
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}