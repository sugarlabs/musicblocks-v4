{
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": [
                "*.json",
                "*.jsonc",
                "*.yml",
                "*.html",
                "*.css",
                "*.scss",
                "*.tsx"
            ],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
